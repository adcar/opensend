{
  "buildCommand": "bin/vercel-build",
  "outputDirectory": "public",
  "framework": null,
  "installCommand": "bundle install",
  "regions": ["iad1"],
  "functions": {
    "api/**/*.rb": {
      "runtime": "@vercel/ruby@0.0.1"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.rb" }
  ]
}
